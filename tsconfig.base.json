{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@gamesberry/karmyc-core/*": [
                "packages/karmyc-core/src/*"
            ],
            "@gamesberry/karmyc-shared/*": [
                "packages/karmyc-shared/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/dist",
        "examples/static/js/clipper.js",
        "jest.config.js",
        "rollup.config.js"
    ]
}

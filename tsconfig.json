{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "composite": true,
        "types": [
            "vite/client",
            "react",
            "react-dom"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "rollup.config.js",
        "rollup.base.js"
    ]
}

{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es2016"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@gamesberry/karmyc-core/*": [
                "packages/core/src/*"
            ],
            "@gamesberry/karmyc-shared/*": [
                "packages/shared/src/*"
            ],
            "@gamesberry/karmyc-area-projects/*": [
                "packages/area-projects/src/*"
            ]
        },
        "types": [
            "vite/client",
            "jest",
            "react",
            "react-dom"
        ]
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "packages/examples/public/js/clipper.js",
        "jest.config.js",
        "packages/core/utils/math/svgPath.js",
        "packages/core/src/utils/math/svgPath.js",
        "**/rollup.config.js",
        "rollup.base.js"
    ]
}

{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "lib": [
            "dom",
            "es2016",
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "./*"
            ]
        },
        "types": [
            "vite/client",
            "jest"
        ]
    },
    "exclude": [
        "node_modules",
    ],
}

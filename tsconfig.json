{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "composite": true,
        "types": [
            "vite/client",
            "react",
            "react-dom",
            "jest",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@core/*": ["./src/core/*"],
            "@components/*": ["./src/components/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@utils/*": ["./src/utils/*"],
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.css",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "rollup.config.js",
        "rollup.base.js"
    ]
}

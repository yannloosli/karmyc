{
    "name": "@gamesberry/karmyc",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "yarn workspaces run dev",
        "build": "yarn workspaces run build",
        "lint": "yarn workspaces run lint",
        "test": "yarn workspaces run test",
        "clean": "rimraf packages/*/dist",
        "publish-all": "yarn workspaces run publish",
        "bootstrap": "yarn install && yarn build",
        "watch:core": "yarn workspace @gamesberry/karmyc-core dev",
        "watch:area-projects": "yarn workspace @gamesberry/karmyc-area-projects dev",
        "watch:shared": "yarn workspace @gamesberry/karmyc-shared dev",
        "dev:all": "concurrently \"yarn:watch:*\"",
        "dev:examples": "yarn workspace @gamesberry/karmyc-examples dev",
        "build:examples": "yarn workspace @gamesberry/karmyc-examples build",
        "preview:examples": "yarn workspace @gamesberry/karmyc-examples preview"
    },
    "devDependencies": {
        "@open-editor/vite": "^0.9.3",
        "@rollup/plugin-commonjs": "^25.0.0",
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@rollup/plugin-typescript": "^11.0.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^5",
        "@testing-library/react": "^16.3.0",
        "@testing-library/react-hooks": "^8.0.1",
        "@testing-library/user-event": "^14",
        "@types/jest": "^29.5.0",
        "@types/node": "^22.14.1",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/redux-mock-store": "^1.5.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^8.2.2",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-jest": "^27.0.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-react": "^7.33.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest": "^29.0.0",
        "jest-environment-jsdom": "^29.7.0",
        "redux-mock-store": "^1.5.5",
        "rimraf": "^5.0.0",
        "rollup": "^4.0.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-terser": "^7.0.2",
        "ts-jest": "^29.3.2",
        "typescript": "^5.0.0",
        "vite": "^5.0.0"
    },
    "license": "MIT",
    "dependencies": {
        "fast-deep-equal": "^3.1.3"
    }
}
